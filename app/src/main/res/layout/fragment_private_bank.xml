<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.nedashkovskiy.rate.fragment.PBFragment"
    android:orientation="vertical"
    android:paddingLeft="@dimen/distance"
    android:paddingRight="@dimen/distance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/private_bank"
            android:textSize="@dimen/header_bank_text_size"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/date_image_view"
            android:layout_width="@dimen/calendar_icon_size"
            android:layout_height="@dimen/calendar_icon_size"
            android:layout_marginEnd="@dimen/distance"
            android:src="@drawable/calendar_icon" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/header_bank_text_size"
            android:text="01.01.2015"
            android:textColor="@color/yellow"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance">

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            android:textSize="17sp"
            android:alpha="0.5"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purchase"
            android:textSize="17sp"
            android:alpha="0.5"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:alpha="0.5"
            android:text="@string/sale" />

        </TableRow>

        <TableRow
            android:id="@+id/line_eur"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR"
                android:textSize="@dimen/currency_text_size"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sale_eur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/currency_text_size"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/purchase_eur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/currency_text_size"/>
        </TableRow>

        <TableRow
            android:id="@+id/line_usd"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD"
                android:textSize="@dimen/currency_text_size"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sale_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/currency_text_size"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/purchase_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/currency_text_size"/>
        </TableRow>

        <TableRow
            android:id="@+id/line_rub"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RUR"
                android:textSize="@dimen/currency_text_size"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sale_rub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/currency_text_size"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/purchase_rub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/currency_text_size"/>
        </TableRow>
    </TableLayout>
</LinearLayout>